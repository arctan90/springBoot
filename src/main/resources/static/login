	<script>
	  //ç”¨ajaxè·å–sessionä¸­çš„æ•°æ®
	  
      $.validator.setDefaults({
        submitHandler: function() {
          var name =$("#name").val();
          var pwd = $("#password").val();
          
          //setting session
          if ($("#remember-me").attr("checked") == "true") {

          }
          $.ajax({
              type:"post",
              url:"/api/login",
              contentType:"application/json;charset=UTF-8",
              dataType:"json",
              data:JSON.stringify({"name":name,"pwd":pwd}),
              success:function(data, textStatus, request){
                if (data.code == 0) {	
                  $("#login-title").attr("class", "alert alert-success");
                  $("#login-title").html(data.msg);
                  document.cookie;
                  alert(document.cookie);
                } else {
                  $("#login-title").attr("class", "alert alert-danger");
                  $("#login-title").html(data.msg);
                }
              }
          });
        }
      });

      $().ready(function() {
        $("#login-form").validate();
      });
    </script>
