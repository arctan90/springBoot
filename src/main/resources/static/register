    <script src="js/bootstrap.min.js"></script>
    <script src="/js/dist/jquery.validate.min.js"></script>
    <script src="/js/dist/localization/messages_zh.min.js"></script>
    <script>
     var okpage;
      $(document).ready(function() {
          bodyContent = $.ajax({
          url: "/pages/registok",
          type: "GET",
          global:false,
          dataType: "html",
          success:function(msg) {
            okpage = msg;
          }
      })
     });
    
      $.validator.setDefaults({
        submitHandler: function() {
          var name =$("#name").val();
          var pwd = $("#password-confirm").val();
          var email = $("#email").val();
          $.ajax({
              type:"post",
              url:"/api/regist",
              contentType:"application/json;charset=UTF-8",
              dataType:"json",
              data:JSON.stringify({"name":name,"pwd":pwd,"email":email}),
              success:function(data){
                $("#form-container").html(okpage);
              }
          });
        }
      });

      $().ready(function() {
        $("#register-form").validate();
      });
    </script>
